<% include ./partials/header %>
<% include ./partials/navbar %>
<div class="flex-container">
  <div class="text-center" style="width: 355px; margin: 25px auto;">
      <h1 class="mb-1"><i class="fas fa-user-plus"></i></h1>
      <form action="/register" method="post">
        <h3 class="mb-3">Signup</h3>
        <label for="organization" class="sr-only">Organization</label>
          <input type="text" name="organization" class="form-control mt-2" placeholder="Organization" required autofocus>
        <div class="row">
          <div class="col-md-6">
            <label for="userFirstName" class="sr-only">First Name</label>
              <input type="text" name="userFirstName" class="form-control mt-2" placeholder="First Name" required>
          </div>
          <div class="col-md-6">
            <label for="userLastName" class="sr-only">Last Name</label>
              <input type="text" name="userLastName" class="form-control mt-2" placeholder="Last Name" required autofocus>
          </div>
        </div>
        <label for="email" class="sr-only">Email</label>
          <input type="email" name="username" class="form-control mt-2" placeholder="Email" required>
        <label for="password" class="sr-only">Password</label>
          <input type="password" class="form-control mt-2" name="password" placeholder="Password" required>
        <button class="btn btn-outline-info btn-block mt-2" type="submit">Signup</button>
      </form>
  </div>
</div>




<% include ./partials/footer %>
